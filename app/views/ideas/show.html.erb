<div class='admin-container'>
  <h2><span>title:</span> <%= @idea.title %></h2>
  <h2><span>body:</span> <%= @idea.body %></h2>
  <h2><span>category:</span> <%= @idea.category.title %></h2>
  <h2><span>quality:</span> <%= @idea.quality %></h2>
  <h2><span>images:</span></h2>
  <% if @idea.images.exists? %>
    <% @idea.images.each do |image| %>
      <%= image_tag image.image.url(:medium) %>
    <% end %>
  <% end %>
  <%= link_to "All Ideas", user_path(current_user) %>
  <%= link_to "Delete", user_idea_path(current_user, @idea), method: :delete%>
  <%= link_to "Edit",   edit_user_idea_path(current_user, @idea) %>
</div>